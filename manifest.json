{
    "manifest_version": 2,
    "name": "Additional HTTP headers",
    "version": "1.1",
    "description": "Support adding additional HTTP headers to every requests",
    "options_page": "options/options.html",
    "icons": {
        "16" : "icons/ahh-16.png",
        "48" : "icons/ahh-48.png",
        "128" : "icons/ahh-128.png"
    },
    "permissions": [
        "storage",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    
    "background": {
        "scripts": [
          "ahh.js"
        ],
        "persistent": true
    }

}
